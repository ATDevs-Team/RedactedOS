#/!bin/sh

echo "Cleaning project"
make clean
echo "Building project"
make
echo "Running emulator"
# qemu-system-aarch64 \
../qemu/build/qemu-system-aarch64-unsigned \
-M virt \
-cpu cortex-a72 \
-m 512M \
-kernel kernel.img \
-serial mon:stdio \
-device virtio-gpu-pci \
-display sdl \
# -device ramfb \
#virtio-gpu-pci,max_outputs=1 \
#,xres=800,yres=600 \
# -nographic \
# -monitor unix:/tmp/qemu-monitor-socket,server,nowait -s -S
